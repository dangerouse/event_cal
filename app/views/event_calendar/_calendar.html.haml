.calendar.monthly
  %h1= l calendar.base_date, :format => :calendar_title
  %ul.dates
    - wdays_row_for(calendar).each do |wday|
      %li.date.wday_header= wday
    - dates = (calendar.start_on .. calendar.end_on).to_a
    = render :partial => 'event_calendar/date', :collection => dates, :locals => { :calendar => calendar }
